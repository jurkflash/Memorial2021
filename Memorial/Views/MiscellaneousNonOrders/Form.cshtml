@model Memorial.Core.Dtos.MiscellaneousTransactionDto
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderAction("ApplicantBrief", "Applicants", new { id = Model.ApplicantId });}

<h2>Form</h2>

@using (Html.BeginForm("Save", "MiscellaneousNonOrders"))
{
    @Html.LabelFor(m => m.AF)
    <div class="form-group row">
        <div class="col-md-3">
            Price
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            Remark
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(m => m.Remark, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(m => m.MiscellaneousItemId)
    @Html.HiddenFor(m => m.ApplicantId)
    <button type="submit" class="btn btn-primary">Save</button>
}
