@model Memorial.ViewModels.ApplicantBriefViewModel
@{
    ViewBag.Title = "Info";
}

<h2>New Applicant</h2>

<div class="form-group row">
    <div class="col-md-3">
        IC
    </div>
    <div class="col-md-6">
        @Html.LabelFor(a => a.IC)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">
        Name
    </div>
    <div class="col-md-6">
        @Html.LabelFor(a => a.Name)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">
        Name2
    </div>
    <div class="col-md-6">
        @Html.LabelFor(a => a.Name2)
    </div>
</div>

<p>
    @Html.ActionLink("New Deceased", "NewDeceased", new { id = Model.Id })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>English Name</th>
            <th>Chinese Name</th>
            <th>Relationship</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deceased in Model.deceasedBriefDtos)
        {
            <tr>
                <td>@Html.ActionLink(deceased.Name, "DeceasedInfo", new { id = deceased.Id }, new { target = "deceasedInfo" })</td>
                <td>@deceased.Name2</td>
                <td>@deceased.RelationshipType.Name</td>
                <td>@Html.ActionLink("Edit", "EditDeceased", new { id = deceased.Id }, new { target = "deceasedInfo" })</td>
            </tr>
        }
    </tbody>
</table>